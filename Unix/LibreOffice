# Instalar o tema do LibreOffice
sudo apt-get install libreoffice-gtk3-integration

# Instalar o pacote do Microsoft Office icons
sudo apt-get install libreoffice-style-sifr

# Selecionar o tema e o ícone
libreoffice --view=GTK



#Revert
# Desinstalar o pacote do Microsoft Office icons
sudo apt-get remove libreoffice-style-sifr

# Desinstalar o tema do LibreOffice
sudo apt-get remove libreoffice-gtk3-integration

# Iniciar o LibreOffice com a aparência padrão
libreoffice
